<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.monkey"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:name="com.example.monkey.fingo.FingoApplication"
        android:allowBackup="true"
        android:icon="@drawable/monkey_logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Translucent" >
        <activity
            android:name="com.example.monkey.MonkeyAction"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.example.monkey.MonkeyActionScanReceiver" >
            <intent-filter>
                <action android:name="SCAN_INSTALLED_FINGO_ACTION" >
                </action>
            </intent-filter>
        </receiver>
        <receiver android:name="com.example.monkey.MonkeyActionReceiver" >
            <intent-filter>
                <action android:name="ACTION_DO" >
                </action>
            </intent-filter>
        </receiver>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

</manifest>